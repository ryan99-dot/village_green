{% extends 'base.html.twig' %}

{% block title %}Commande {{ commande.numero }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2>Commande n°{{ commande.numero }}</h2>
    <p>Date : {{ commande.date|date('d/m/Y') }}</p>
    <p>Type de paiement : {{ commande.typePaiement }}</p>
    <p>Statut de paiement : {{ commande.statutPaiement }}</p>
    <p>Date de paiement : {{ commande.datePaiement ? commande.datePaiement|date('d/m/Y') : 'Non payé' }}</p>
    <p>État : <span class="badge bg-info">{{ commande.etat }}</span></p>

    <hr>

    <h4>Produits de la commande</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix unitaire</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% set total = 0 %}
            {% for cp in commande.commandesProduit %}
                {% set sous_total = cp.produit.prix * cp.quantite %}
                {% set total = total + sous_total %}
                <tr>
                    <td>{{ cp.produit.nom }}</td>
                    <td>{{ cp.quantite }}</td>
                    <td>{{ cp.produit.prix|number_format(2, ',', ' ') }} €</td>
                    <td>{{ sous_total|number_format(2, ',', ' ') }} €</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">Aucun produit trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Total :</th>
                <th>{{ total|number_format(2, ',', ' ') }} €</th>
            </tr>
        </tfoot>
    </table>

    <a href="{{ path('app_commandes') }}" class="btn btn-vert text-white mb-3">← Retour aux commandes</a>
</div>
{% endblock %}
