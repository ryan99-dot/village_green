{% extends 'base.html.twig' %}

{% block title %}Mes commandes
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<div class="row justify-content-center g-4">
			{% for commande in commandes %}
				<div class="col-md-4">
					<div class="card h-100 text-center bg-secondary-subtle">
						<a href="{{ path('app_commande_detail', {id: commande.id}) }}" class="card-body text-decoration-none">
							<h4 class="card-title">{{ commande.numero }}</h4>
							<p class="card-text">Date :
								{{ commande.date|date('d/m/Y') }}</p>
							<p class="card-text">Type de paiement :
								{{ commande.typePaiement }}</p>
							<p class="card-text">Statut de paiement :
								{{ commande.statutPaiement }}</p>
							<p class="card-text">
								Date de paiement :
								{{ commande.datePaiement ? commande.datePaiement|date('d/m/Y') : 'Non payé' }}
							</p>
							<p class="card-text">
								<span class="badge">{{ commande.etat }}</span>
							</p>

						</a>
					</div>
				</div>
			{% else %}
				<p class="text-center">Aucune commande trouvée.</p>
			{% endfor %}
		</div>
	</div>
{% endblock %}
